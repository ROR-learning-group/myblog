<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= yield :view_specific_css %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

  <nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to raw('<span class="glyphicon glyphicon-home"></span> MY BLOG'), root_path, class: 'navbar-brand' %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to raw('<span class="glyphicon glyphicon-book"></span> Articles'), posts_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if session[:username].nil?  %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  Login
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <%= form_tag users_login_path, class: 'navbar-form' do %>
                      <div class="form-group">
                        <%= label_tag :username, 'Username:' %>
                        <%= text_field_tag :username, '', class: 'form-control' %>
                      </div>
                      <div class="form-group">
                        <%= label_tag :password, 'Password:' %>
                        <%= password_field_tag :password, '', class: 'form-control'%>
                      </div>
                      <div class="text-center" style="padding-top: 5px;">
                        <%= submit_tag 'Login', class: 'btn btn-default' %>
                      </div>
                  <% end %>
                </ul>
              </li>

          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                Signed in as <%= session[:username].to_s.camelcase %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Logout', users_logout_path %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="container">
    <%= yield %>
  </div>
  <%= yield :view_specific_js %>
</body>
</html>
