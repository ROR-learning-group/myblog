
<div class="row">
  <div class="col-xs-12 col-md-8 col-md-offset-2 text-center">
    <% if notice %>
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <strong>Warning!</strong> <%= notice %>
        </div>
    <% end %>
    <h1>Posts List</h1>
  </div>
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <% @posts.each do |post| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4>
              <%=post.title%>
            </h4>
          </div>
          <div class="panel-body">
            <%=truncate(post.content, length: 100)%>
          </div>
          <div class="panel-footer">
            <div class="pull-left">
              Posted Date: <%= post.created_at %>
            </div>
            <div class="pull-right">
              <%= link_to raw('<span class="glyphicon glyphicon-remove-circle"></span> Delete'), '#', class: 'btn btn-danger btn-xs'%>
              <%= link_to raw('<span class="glyphicon glyphicon-edit"></span> Edit'), '#', class: 'btn btn-warning btn-xs'%>
              <%= link_to raw('<span class="glyphicon glyphicon-eye-open"></span> Read more'), '#', class: 'btn btn-success btn-xs'%>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
    <% end %>
  </div>



